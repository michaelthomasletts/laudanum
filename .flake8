[flake8]
exclude = 
    .gitignore
    .pre-commit-config.yaml
    poetry.lock
    pyproject.toml
    README.md
    __pycache__
    .poetry
    .pytest_cache
    .DS_Store
    tests/*
    dist/*
    Makefile
    *.rst
    *.md
    *.html
    *.css
    *.bat
    *.png
extend-ignore =
    E501
    F403
    F404
    F405
max-line-length = 79
per-file-ignores =
    __init__.py:F401